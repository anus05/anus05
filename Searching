/***********************
Linear search
***********************/
#include<stdio.h>
int main()
{ 	int size;
int k;
int index=0;
int A[size];
		
		int flag=0;
	
		printf("enter the size of an array:");
		scanf("%d",&size);
		printf("enter%d elements of an array:\n",size);
		for(index=0;index<size;index++){
			scanf("%d",&A[index]);
		}
		printf("enter the element to search:");
		scanf("%d",&k);	
			for(index=0;index<size;index++){
			if(A[index]==k)
			{
				printf("%d have  found in index number %d",k,index);
			
				flag =1;
			}
		}
		
		if(flag==0)
	 printf("%d could not be found in the array",k);
	 return 0;
	
	}
